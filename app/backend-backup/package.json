    "scripts": {
        "dev": "LOG_LEVEL=DEBUG TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register server.ts",
        "dev:ts": "LOG_LEVEL=DEBUG ts-node-dev --project tsconfig.json -r tsconfig-paths/register server.ts",
        "dev:port": "PORT=3007 LOG_LEVEL=DEBUG TS_NODE_PROJECT=tsconfig.json node -r ts-node/register -r tsconfig-paths/register server.ts",
