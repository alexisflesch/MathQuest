        "build": "tsc --project tsconfig.json",
        "start": "node dist/server.js",
        "start:port": "PORT=3007 node dist/server.js",
        "type-check": "tsc --project tsconfig.json --noEmit --pretty",
        "lint": "eslint . --ext .ts,.js"
