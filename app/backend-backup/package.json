        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^5.0.1",
        "@types/french-badwords-list": "^1.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/next": "^8.0.7",
        "@types/node": "^20",
