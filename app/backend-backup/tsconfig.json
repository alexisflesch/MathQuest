{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "..",
        "outDir": "../dist/backend",
        "baseUrl": ".",
        "module": "commonjs",
        "paths": {
            "@logger": [
                "logger.ts"
            ],
            "@sockets/*": [
                "sockets/*"
            ],
            "@db": [
                "db/index.ts"
            ],
            "@prisma/client": [
                "../shared/prisma-client"
            ],
            "@shared/*": [
                "../shared/*"
            ]
        }
    },
    "include": [
        "sockets/**/*.ts",
        "server.ts",
        "db/**/*.ts",
        "logger.ts",
        "../shared/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src"
    ]
}