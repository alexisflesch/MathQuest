/**
 * Schema Definitions
 * 
 * This file contains schema definitions for common types used in the application.
 * These can be used with the schema validation utility for runtime validation.
 */

import { createValidator, SchemaFieldType } from './schemaValidation';

// Custom validators for complex fields
export const isCorrectField = (value: unknown): boolean => {
    return typeof value === 'boolean' ||
        (Array.isArray(value) && value.every(item => typeof item === 'number'));
};

export const isNiveauField = (value: unknown): boolean => {
    return typeof value === 'string' ||
        (Array.isArray(value) && value.every(item => typeof item === 'string'));
};

// Answer schema
export const answerSchema = {
    texte: {
        type: 'string',
        required: true
    },
    correct: {
        type: 'boolean',
        required: true
    }
};

// BaseQuestion schema
export const baseQuestionSchema = {
    uid: {
        type: 'string',
        required: true
    },
    texte: {
        type: 'string',
        required: true
    },
    type: {
        type: 'string',
        required: true
    },
    reponses: {
        type: 'array',
        required: false,
        arrayOf: answerSchema
    },
    temps: {
        type: 'number',
        required: false
    },
    explication: {
        type: 'string',
        required: false
    }
};

// Custom validators for complex fields
export const isCorrectField = (value: unknown): boolean => {
    return typeof value === 'boolean' ||
        (Array.isArray(value) && value.every(item => typeof item === 'number'));
};

export const isNiveauField = (value: unknown): boolean => {
    return typeof value === 'string' ||
        (Array.isArray(value) && value.every(item => typeof item === 'string'));
};

// Question schema (extends BaseQuestion)
export const questionSchema = {
    ...baseQuestionSchema,
    correct: {
        type: 'custom',
        validator: isCorrectField,
        required: false
    },
    theme: {
        type: 'string',
        required: false
    },
    difficulte: {
        type: 'number',
        required: false
    },
    niveau: {
        type: 'union',
        options: [
            { type: 'string' },
            { type: 'array', arrayOf: 'string' }
        ],
        required: false
    },
    discipline: {
        type: 'string',
        required: false
    },
    question: {
        type: 'string',
        required: false
    },
    answers: {
        type: 'array',
        required: false,
        arrayOf: answerSchema
    },
    hidden: {
        type: 'boolean',
        required: false
    },
    title: {
        type: 'string',
        required: false
    },
    titre: {
        type: 'string',
        required: false
    }
};

// Create validators for common types
export const validateAnswer = createValidator(answerSchema);
export const validateBaseQuestion = createValidator(baseQuestionSchema);
export const validateQuestion = createValidator(questionSchema);
