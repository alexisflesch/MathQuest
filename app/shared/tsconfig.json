{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": ".",
        "outDir": "../dist/shared",
        "baseUrl": "./",
        "paths": {
            "@shared/*": [
                "./*"
            ]
        },
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "module": "commonjs",
        "target": "ES2020",
        "jsx": "react-jsx" // Changed from "react"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx" // Include TSX files
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}